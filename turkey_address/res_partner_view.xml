<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_res_partner_inherite_view" model="ir.ui.view">
            <field name="name">res.partner.inherit.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority">14</field>
            <field name="arch" type="xml">
            <field name="country_id" position="replace"/>
                <xpath expr="//sheet/group/group/div/div[@class='address_format']" position="replace">
                    <div class="address_format">
                        <field name="region_id" placeholder="Region" nolabel="1" options="{'no_open': True}"
                        style="width:120px;" class="oe_no_button" attrs="{'readonly': [('use_parent_address','=',True)]}"
                        on_change="onchange_region(region_id)" context="{'district_id': district_id}"/>
                        <field name="district_id" placeholder="District" nolabel="1" options="{'no_open': True}"
                        style="width:130px;" class="oe_no_button" attrs="{'readonly': [('use_parent_address','=',True)]}"
                        on_change="onchange_district(district_id)" context="{'state_id': state_id}"/>
                    </div>
                    <div>
                        <field name="zip" placeholder="ZIP" style="width:100px;" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="city" placeholder="City" string="City" style="width:150px;" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="neighbour_id" placeholder="Neighbour"
                        on_change="onchange_neighbour(neighbour_id)" class="oe_no_button" attrs="{'readonly': [('use_parent_address','=',True)]}" options="{'no_open': True}"
                        context="{'region_id': region_id,'state_id': state_id}"/>
                    </div>
                    <div>
                        <field name="state_id" class="oe_no_button" placeholder="State" style="width: 120px;" options='{"no_open": True}' on_change="onchange_state(state_id)" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="country_id" placeholder="Country" style="width: 130px;" class="oe_no_button" options='{"no_open": True, "no_create": True}' attrs="{'readonly': [('use_parent_address','=',True)]}"/>

                    </div>
                </xpath>


                <xpath expr="//form/sheet/notebook/page[1]/field/form/sheet/group[2]/div[2]/field[3]" position="after">
                    <field name="district_id" placeholder="District" class="oe_no_button"
                        on_change="onchange_district(district_id)"
                        context="{'state_id': state_id}"/>
                    <field name="region_id" placeholder="Region" class="oe_no_button"
                        on_change="onchange_region(region_id)"
                        context="{'district_id': district_id}"/>
                    <field name="neighbour_id" placeholder="Neighbour" class="oe_no_button"
                        on_change="onchange_neighbour(neighbour_id)"
                        context="{'region_id': region_id,'state_id': state_id,'district_id': district_id}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>