<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="module_tree_view_inherit" model="ir.ui.view">
            <field name="name">Module Tree View Inherit</field>
            <field name="model">ir.module.module</field>
            <field name="inherit_id" ref="base.module_tree"/>
            <field name="arch" type="xml">
                <tree position="replace">
                    <tree decoration-info="state=='to upgrade' or state=='to install'"
                          decoration-danger="state=='uninstalled'"
                          decoration-muted="state=='uninstallable'"
                          create="false" string="Apps">
                        <field name="shortdesc"/>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="website"/>
                        <field name="installed_version"/>
                        <field name="state"/>
                        <field name="category_id" invisible="1"/>
                    </tree>
                </tree>
            </field>
        </record>
    </data>
</odoo>