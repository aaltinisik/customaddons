<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_public_category_description_form" model="ir.ui.view">
        <field name="name">product.public.category.form.inherit</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="description_page_id" string="Description Page"/>
            </xpath>
        </field>
    </record>
</odoo>