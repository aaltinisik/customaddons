<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Resequence Sales Menu Items & Add New Menu-->
        <menuitem id="sale.menu_sale_quotations"
                  name="Quotations"
                  action="sale.action_quotations_with_onboarding"
                  parent="sale.sale_order_menu"
                  sequence="1" groups="sales_team.group_sale_salesman"/>
        <menuitem id="sale.menu_sale_order"
                  name="Orders"
                  action="sale.action_orders"
                  parent="sale.sale_order_menu"
                  sequence="2" groups="sales_team.group_sale_salesman"/>
        <menuitem id="sale.menu_sale_quotations_and_orders"
                  name="Quotations And Orders"
                  parent="sale.sale_order_menu"
                  sequence="3" groups="sales_team.group_sale_salesman"/>
        <menuitem id="sale.report_sales_team"
                  name="Sales Teams"
                  parent="sale.sale_order_menu"
                  groups="sales_team.group_sale_manager"
                  action="sales_team.crm_team_salesteams_act"
                  sequence="4"/>
        <menuitem id="sale.res_partner_menu"
                  name="Customers"
                  parent="sale.sale_order_menu"
                  action="base.action_partner_form"
                  sequence="5" groups="sales_team.group_sale_salesman"/>
        <!--Inherit Existing Actions-->
        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
            <field name="context">{}</field>
        </record>
        <record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="context">{}</field>
        </record>
    </data>
</odoo>